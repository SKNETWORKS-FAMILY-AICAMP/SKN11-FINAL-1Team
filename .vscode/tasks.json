{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start FastAPI Server (Port 8001)",
            "type": "shell",
            "command": "python",
            "args": ["-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8001", "--reload"],
            "group": "build",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/fast_api"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Start Django Server (Port 8000)",
            "type": "shell",
            "command": "python",
            "args": ["manage.py", "runserver", "0.0.0.0:8000"],
            "group": "build",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/django_prj/onboarding_quest"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
